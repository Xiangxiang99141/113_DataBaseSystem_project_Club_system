<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>社團管理系統</title>
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</head>

<%- include('../layouts/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>活動管理</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addActivityModal">新增活動</button>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>活動名稱</th>
                            <th>活動內容</th>
                            <th>地點</th>
                            <th>日期</th>
                            <th>名額</th>
                            <th>報名期間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% activities.forEach(activity => { %>
                        <tr>
                            <td><%= activity.Ca_name %></td>
                            <td><%= activity.Ca_content %></td>
                            <td><%= activity.Ca_location %></td>
                            <td><%= activity.Ca_date %></td>
                            <td><%= activity.Ca_quota %></td>
                            <td><%= activity.Ca_open_at %> ~ <%= activity.Ca_close_at %></td>
                            <td>
                                <button class="btn btn-sm btn-info me-2">詳情</button>
                                <button class="btn btn-sm btn-warning me-2">編輯</button>
                                <button class="btn btn-sm btn-danger">刪除</button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- 新增活動 Modal -->
<div class="modal fade" id="addActivityModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">新增活動</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addActivityForm">
                    <div class="mb-3">
                        <label class="form-label">活動名稱</label>
                        <input type="text" class="form-control" name="Ca_name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">活動內容</label>
                        <textarea class="form-control" name="Ca_content" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">地點</label>
                        <input type="text" class="form-control" name="Ca_location" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">日期</label>
                        <input type="datetime-local" class="form-control" name="Ca_date" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">名額</label>
                        <input type="number" class="form-control" name="Ca_quota" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">報名開始時間</label>
                        <input type="datetime-local" class="form-control" name="Ca_open_at" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">報名結束時間</label>
                        <input type="datetime-local" class="form-control" name="Ca_close_at" required>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="insurance">
                            <label class="form-check-label">需要保險</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="transportation">
                            <label class="form-check-label">需要交通</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="submit" form="addActivityForm" class="btn btn-primary">新增</button>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>
</html>