<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>社團管理系統</title>
    <!-- <link rel="stylesheet" href="styles/styles.css"> -->
    <link rel="stylesheet" href="./css/bootstrap.min.css">
</head>

<body>
    <%- include('layouts/header-index') %>

    <div class="container mt-4">
        <!-- 錯誤提示 -->
        <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
        
        <!-- 成功提示 -->
        <% if (success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>

        <div class="row mb-4">
            <div class="col">
                <h2>社團列表</h2>
            </div>
            <div class="col-auto">
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                        社團類型篩選
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="?type=all">全部</a></li>
                        <li><a class="dropdown-item" href="?type=學藝性">學藝性</a></li>
                        <li><a class="dropdown-item" href="?type=體育性">體育性</a></li>
                        <li><a class="dropdown-item" href="?type=服務性">服務性</a></li>
                        <li><a class="dropdown-item" href="?type=康樂性">康樂性</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% clubs.forEach(function(club) { %>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= club.C_name %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= club.C_type %></h6>
                            <p class="card-text"><%= club.C_intro %></p>
                            <% if (club.C_url) { %>
                                <p class="card-text">
                                    <small class="text-muted">
                                        社團網址：<a href="<%= club.C_web %>" target="_blank"><%= club.C_url %></a>
                                    </small>
                                </p>
                            <% } %>
                            <p class="card-text">
                                <small class="text-muted">名額：<%= club.C_quota %></small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <% if (locals.user) { %>
                                <button class="btn btn-primary w-100" 
                                        onclick="applyClub('<%= club.C_id %>')"
                                        <%= club.isMember ? 'disabled' : '' %>>
                                    <%= club.isMember ? '已是社員' : '報名' %>
                                </button>
                            <% } else { %>
                                <a class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#loginModal">登入後報名</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- 報名確認 Modal -->
    <div class="modal fade" id="applyModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">確認報名</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>確定要報名這個社團嗎？</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary" id="confirmApply">確定報名</button>
                </div>
            </div>
        </div>
    </div>

    <script>
    let selectedClubId = null;

    function applyClub(clubId) {
        selectedClubId = clubId;
        const modal = new bootstrap.Modal(document.getElementById('applyModal'));
        modal.show();
    }

    document.getElementById('confirmApply').addEventListener('click', async function() {
        if (!selectedClubId) return;
        
        try {
            const response = await fetch('/api/clubs/apply', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    clubId: selectedClubId
                })
            });

            const result = await response.json();
            
            if (response.ok) {
                location.reload();
            } else {
                alert(result.message || '報名失敗，請稍後再試');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('報名失敗，請稍後再試');
        }
    });
    </script>

    <%- include('layouts/footer') %>
    <script src="./js/bootstrap.min.js"></script>
    <script src="./js/jquery.min.js"></script>
</body>
</html>
