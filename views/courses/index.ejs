<%- include('../layouts/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>社課管理</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCourseModal">新增社課</button>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>社課名稱</th>
                            <th>社課內容</th>
                            <th>地點</th>
                            <th>日期</th>
                            <th>名額</th>
                            <th>報名期間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% courses.forEach(course => { %>
                        <tr>
                            <td><%= course.Cc_name %></td>
                            <td><%= course.Cc_content %></td>
                            <td><%= course.Cc_location %></td>
                            <td><%= course.Cc_date %></td>
                            <td><%= course.Cc_quota %></td>
                            <td><%= course.Cc_open_at %> ~ <%= course.Cc_close_at %></td>
                            <td>
                                <button class="btn btn-sm btn-info me-2">詳情</button>
                                <button class="btn btn-sm btn-warning me-2">編輯</button>
                                <button class="btn btn-sm btn-danger">刪除</button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- 新增社課 Modal -->
<div class="modal fade" id="addCourseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">新增社課</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addCourseForm">
                    <div class="mb-3">
                        <label class="form-label">社課名稱</label>
                        <input type="text" class="form-control" name="Cc_name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">社課內容</label>
                        <textarea class="form-control" name="Cc_content" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">地點</label>
                        <input type="text" class="form-control" name="Cc_location" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">日期</label>
                        <input type="datetime-local" class="form-control" name="Cc_date" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">名額</label>
                        <input type="number" class="form-control" name="Cc_quota" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">報名開始時間</label>
                        <input type="datetime-local" class="form-control" name="Cc_open_at" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">報名結束時間</label>
                        <input type="datetime-local" class="form-control" name="Cc_close_at" required>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="insurance">
                            <label class="form-check-label">需要保險</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="transportation">
                            <label class="form-check-label">需要交通</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="submit" form="addCourseForm" class="btn btn-primary">新增</button>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>
